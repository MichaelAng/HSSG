<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.chemistry"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="17" />

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.chemistry.SplashPage"
            android:label="@string/app_name"
            android:theme="@android:style/Theme.Dialog" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.chemistry.MainPage"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.example.chemistry.TopicPage"
            android:label="@string/choosetopic" >
        </activity>
        <activity
            android:name="com.example.chemistry.QuestionList"
            android:label="@string/choosequestion" >
        </activity>
        <activity
            android:name="com.example.chemistry.QuestionPage"
            android:label="@string/multiplechoice" >
        </activity>
        <activity
            android:name="com.example.chemistry.ScorePage"
            android:label="@string/score" >
        </activity>
        <activity
            android:name="com.example.chemistry.AboutPage"
            android:label="@string/app_name"
            android:theme="@android:style/Theme.Dialog" >
        </activity>
        <activity
            android:name="com.example.chemistry.Prefs"
            android:label="@string/app_name"
            android:theme="@android:style/Theme.Dialog" >
        </activity>
    </application>

</manifest>